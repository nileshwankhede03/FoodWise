<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Suggestions | FoodChain</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .bg-gradient-custom {
            background: linear-gradient(135deg, #22c55e, #059669);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="bg-gradient-custom text-white py-16 shadow-lg">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-4">Recipe Suggestions</h1>
            <p class="text-xl md:text-2xl opacity-90">Make delicious meals with your expiring ingredients</p>
        </div>
    </div>

    <!-- Recipes Grid -->
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% recipes.forEach(function(recipeData) { %>
                <div class="bg-white rounded-xl shadow-lg p-6 transform transition-all duration-300 hover:shadow-xl">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4 pb-2 border-b">
                        Recipe for <%= recipeData.productName %>
                    </h2>
                    <div class="prose max-w-none">
                        <!-- Using white-space-pre to preserve formatting -->
                        <pre class="text-gray-600 whitespace-pre-wrap font-sans"><%= recipeData.recipe %></pre>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Back Button -->
        <div class="mt-8 text-center">
            <a href="/read/inventory" 
               class="inline-flex items-center px-6 py-3 bg-gradient-custom text-white rounded-lg hover:opacity-90 transition-all duration-200">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Inventory
            </a>
        </div>
    </div>
</body>
</html>
