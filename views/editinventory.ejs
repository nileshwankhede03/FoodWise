<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Inventory | FoodChain</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .bg-gradient-custom {
            background: linear-gradient(135deg, #22c55e, #059669);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navbar -->
    <div class="bg-gray-900 text-white p-6">
        <!-- Your existing navbar code -->
    </div>

    <!-- Header Section -->
    <div class="bg-gradient-custom text-white py-16 shadow-lg">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-4">Edit Inventory</h1>
            <p class="text-xl md:text-2xl opacity-90">Update your food item details</p>
        </div>
    </div>

    <!-- Edit Form Section -->
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg p-8 transform transition-all duration-300 hover:shadow-xl">
                <form action="/edit/inventory/<%= inventory[0]._id %>" method="post">
                    <div class="space-y-6">
                        <!-- Name -->
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Name</label>
                            <input type="text" name="name" value="<%= inventory[0].name %>"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200"
                                required>
                        </div>

                        <!-- Category -->
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Category</label>
                            <input type="text" name="category" value="<%= inventory[0].category %>"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200"
                                required>
                        </div>

                        <!-- Quantity and Unit in same row -->
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">Quantity</label>
                                <input type="number" name="quantity" value="<%= inventory[0].quantity %>"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200"
                                    required>
                            </div>
                            <div>
                                <label class="block text-gray-700 font-semibold mb-2">Unit</label>
                                <input type="text" name="unit" value="<%= inventory[0].unit %>"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200"
                                    required>
                            </div>
                        </div>

                        <!-- Price -->
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Price (â‚¹)</label>
                            <input type="number" name="price" value="<%= inventory[0].price %>"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200"
                                required>
                        </div>

                        <!-- Status -->
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Status</label>
                            <select name="status" 
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200">
                                <option value="active" <%= inventory[0].status === 'active' ? 'selected' : '' %>>Active</option>
                                <option value="inactive" <%= inventory[0].status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                            </select>
                        </div>

                        <!-- Expiry Date -->
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2">Expiry Date</label>
                            <input type="date" name="expiryDate" 
                                value="<%= inventory[0].expiryDate.toISOString().split('T')[0] %>"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 transition-all duration-200"
                                required>
                        </div>

                        <!-- Submit Button -->
                        <div class="flex justify-end gap-4">
                            <a href="/read/inventory" 
                               class="px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors duration-200">
                                Cancel
                            </a>
                            <button type="submit" 
                                    class="px-6 py-3 bg-gradient-custom text-white rounded-lg hover:opacity-90 transition-all duration-200">
                                Update Item
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
